{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>


    {{ form_start(registrationForm) }}
    <table>

        <tbody>
            <tr>
                <td>{{ form_label(registrationForm.username, 'Nom d\'utilisateur') }}</td>
                <td>{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control custom-input'}}) }}</td>
            </tr>
            
            <tr>
                <td>{{ form_label(registrationForm.discord_id, 'Discord ID') }}</td>
                <td>{{ form_widget(registrationForm.discord_id, {'attr': {'class': 'form-control custom-input'}}) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(registrationForm.plainPassword, 'Mot de passe') }}</td>
                <td>{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control custom-input'}}) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(registrationForm.agreeTerms, 'Acceptez') }}</td>
                <td>{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-control custom-input'}}) }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    {{ form_errors(registrationForm.username) }}
                    {{ form_errors(registrationForm.discord_id) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    {{ form_rest(registrationForm) }}
                </td>
            </tr>
            <tr>
                <td><button type="submit" class="btn">Register</button></td>
            </tr>
        </tbody>
    </table>

    {{ form_errors(registrationForm) }}

    {{ form_end(registrationForm) }}
{% endblock %}
