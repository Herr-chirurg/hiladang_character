{% extends 'base.html.twig' %}

{% block title %}Log index{% endblock %}

{% block body %}
    <h1>Log index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Item_type</th>
                <th>Item_id</th>
                <th>Created_at</th>
                <th>Field_name</th>
                <th>Old_value</th>
                <th>New_value</th>
                <th>Description</th>
                <th>User_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.id }}</td>
                <td>{{ log.itemType }}</td>
                <td>{{ log.itemId }}</td>
                <td>{{ log.createdAt ? log.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ log.fieldName }}</td>
                <td>{{ log.oldValue }}</td>
                <td>{{ log.newValue }}</td>
                <td>{{ log.description }}</td>
                <td>{{ log.userId }}</td>
                <td>
                    <a href="{{ path('app_log_show', {'id': log.id}) }}">show</a>
                    <a href="{{ path('app_log_edit', {'id': log.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_log_new') }}">Create new</a>
{% endblock %}
