{{ form_start(form) }}
    {% set characterData = form.vars.value %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ "%04d"|format(characterData.id) }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ characterData.owner.username }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ characterData.name }}</td>
                <td>{{ form_widget(form.name) }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ characterData.title }}</td>
                <td>{{ form_widget(form.title) }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td  class="fixed-width-value">{{ "%7d"|format(characterData.level) }}</td>    
                <td>{{ form_widget(form.level_add) }}</td>
            </tr>
            <tr>
                <th>XP joueur</th>
                <td class="fixed-width-value">{{ "%7d"|format(characterData.xpCurrent) }} XP</td>
                <td>{{ form_widget(form.xp_add) }} XP</td>
                <td class="fixed-width-value">/ {{ "%7d"|format((XPNiveauSuivant - totalXP)) }} XP</td>
            </tr>
            <tr>
                <th>XP maitrise</th>
                <td class="fixed-width-value">{{ "%7d"|format(characterData.xpCurrentMj) }} XP</td>
                <td>{{ form_widget(form.xp_mj_add) }} XP</td>
                <td class="fixed-width-value">/ {{ "%7d"|format((XPNiveauSuivant - totalXP)/2) }} XP</td>
            </tr>
            <tr>
                <th>Richesse</th>
                <td class="fixed-width-value">{{ "%7d"|format(characterData.gp) }} GP</td>
                <td>{{ form_widget(form.gp_add) }} GP</td>
                <td class="fixed-width-value">/ {{ "%7d"|format(GV) }} GV</td>
            </tr>
            <tr>
                <th>Reputation</th>
                <td class="fixed-width-value">{{ "%7d"|format(characterData.pr) }} PR</td>
                <td>{{ form_widget(form.pr_add) }} XP</td>
            </tr>
            <tr>
                <th>Fin d'activité</th>
                {% if characterData.endActivity|date('d/m/Y') > date('now')|date('d/m/Y') %}
                        <td>{{ characterData.endActivity | date('d/m/Y') }}</td>
                {% else  %}
                        <td>Disponible</td>
                {% endif %}
                <td>{{ form_widget(form.activity_add) }} jours</td>
            </tr>
            <tr>
                <th>Description</th>
                <td colspan="3">{{ form_widget(form.description) }}</td>
            </tr>
        </tbody>
    </table>


    <div class="form-group">
    </div>
    
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    
    <table class="table">
        <thead>
            <tr>
                <th>Champ</th>
                <th>Ancienne valeur</th>
                <th>Nouvelle valeur</th>
                <th>Date de changement</th>
                <th>Par</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            {% for key, diff in log.diffs %}
                {% if key != 'last_action_description' %}
                    <tr>
                        <td>{{ key }}</td>
                        <td>
                            {% if diff.old is defined %}
                                {% if diff.old.id is defined %}
                                    {{ diff.old.id }}
                                {% else %}
                                    {{ diff.old }}
                                {% endif %}
                            {% endif %}
                        </td>
                        <td>
                            {% if diff.new is defined %}
                                {% if diff.new.id is defined %}
                                    {{ diff.new.id }}
                                {% else %}
                                    {{ diff.new }}
                                {% endif %}
                            {% endif %}
                        </td>
                        <td>{{ log.createdAt | date('d/m/Y h:m:s') }}</td>
                        <td>{{ log.username }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
            <tr>
                <td colspan="5">Description :
                    {{ log.diffs['last_action_description'] is defined ? 
                        log.diffs['last_action_description'].new : "Description vide !" }}
                </td>
            </tr>
            <tr>
                <td></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ form_widget(form._token) }}
    
</form>