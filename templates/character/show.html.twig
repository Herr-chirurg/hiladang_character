{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ character.title }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ character.img }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ character.level }}</td>
            </tr>
            <tr>
                <th>Xp_current</th>
                <td>{{ character.xpCurrent }}</td>
            </tr>
            <tr>
                <th>Xp_current_mj</th>
                <td>{{ character.xpCurrentMj }}</td>
            </tr>
            <tr>
                <th>Gp</th>
                <td>{{ character.gp }}</td>
            </tr>
            <tr>
                <th>Pr</th>
                <td>{{ character.pr }}</td>
            </tr>
            <tr>
                <th>End_activity</th>
                <td>{{ character.endActivity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
