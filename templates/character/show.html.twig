{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ "%04d"|format(character.id) }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ character.owner.username }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ character.title }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ character.level }}</td>
            </tr>
            <tr>
                <th>XP actuel</th>
                <td>{{ character.xpCurrent + character.xpCurrentMj }} XP</td>
                <td>/ XXXXXXX XP</td>
            </tr>
            <tr>
                <th>XP actuel de maitrise</th>
                <td>{{ character.xpCurrentMj }} XP</td>
                <td>/ XXXXXXX XP</td>
            </tr>
            <tr>
                <th>Richesse</th>
                <td>{{ character.gp }} GP</td>
                <td>/ XXXXXXX GP</td>
            </tr>
            <tr>
                <th>Reputation</th>
                <td>{{ character.pr }} PR</td>
            </tr>
            <tr>
                <th>Fin d'activité</th>
                <td>Dans {{ character.endActivity }} jours</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
