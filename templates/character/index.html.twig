{% extends 'base.html.twig' %}

{% block title %}Character index{% endblock %}

{% block body %}
    <h1>Character index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Img</th>
                <th>Level</th>
                <th>Xp_current</th>
                <th>Xp_current_mj</th>
                <th>Gp</th>
                <th>Pr</th>
                <th>End_activity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.id }}</td>
                <td>{{ character.name }}</td>
                <td>{{ character.title }}</td>
                <td>{{ character.img }}</td>
                <td>{{ character.level }}</td>
                <td>{{ character.xpCurrent }}</td>
                <td>{{ character.xpCurrentMj }}</td>
                <td>{{ character.gp }}</td>
                <td>{{ character.pr }}</td>
                <td>{{ character.endActivity }}</td>
                <td>
                    <a href="{{ path('app_character_show', {'id': character.id}) }}">show</a>
                    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_character_new') }}">Create new</a>
{% endblock %}
