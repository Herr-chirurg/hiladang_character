{# templates/partials/_navbar.html.twig #}

{% set current_route = app.request.attributes.get('_route') %}

<header class="app-header">
    
    {# 1. Titre (Gauche) #}
    <h2 class="app-title-text">
        <a href="{{ path('app_user_index') }}">Hiladang Bot</a>
    </h2>
    
    {# 2. Zone Utilisateur (Droite) #}
    <div class="user-area-container">

        {% if current_route in ['app_login', 'app_register'] %}

            <img src="{{ asset('images/default_profile_image.webp') }}" 
                alt="Photo de profil" 
                class="profile-pic">

        {% else %}

            <div class="menu-dropdown-wrapper dropdown-trigger username-image-profile">
            
                <span class="username">{{ app.user.username }}</span>

                {# Ajout de la classe 'dropdown-trigger' pour le JS #}
                <img src="{{ asset('images/default_profile_image.webp') }}" 
                    alt="Photo de profil" 
                    class="profile-pic dropdown-trigger">

                {# Le menu d√©roulant de d√©connexion #}
                <div class="dropdown-menu" id="userMenuDropdown">
                    <a href="{{ path('app_user_show', {'id': app.user.id}) }}">Mon Profil</a> 
                    <a href="{{ path('app_logout') }}">D√©connexion</a>
                </div>
                
            </div>

        {% endif %}
  
    </div>
</header>



{% if current_route in ['app_login', 'app_register'] %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <nav class="navbar">
            <ul class="nav-list">
                <li class="nav-item fixed-width-value"><a  href=""> </a></li>
            </ul>
        </nav>
    </nav>
{% else %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <nav class="navbar">
            <ul class="nav-list">
                <li class="nav-item"><a href="{{ path('app_user_index') }}">Utilisateurs</a></li>
                <li class="nav-item"><a href="{{ path('app_character_index') }}">Personnages</a></li>
                <li class="nav-item"><a href="">Activit√©s</a></li>
                <li class="nav-item"><a href="">Scenarios</a></li>
                <li class="nav-item"><a href="">B√¢timents</a></li>
            </ul>
        </nav>
    </nav>
{% endif %}



<script>
    document.addEventListener('DOMContentLoaded', function() {
        // üéØ CIBLEZ L'IMAGE DE PROFIL (le d√©clencheur)
        const profileImage = document.querySelector('.dropdown-trigger');
        
        // S√©lectionne le menu d√©roulant
        const dropdownMenu = document.querySelector('.dropdown-menu');

        // V√©rifie si les deux √©l√©ments n√©cessaires existent
        if (profileImage && dropdownMenu) {
            
            // 1. GESTION DE L'OUVERTURE/FERMETURE AU CLIC SUR L'IMAGE
            profileImage.addEventListener('click', function(event) {
                // Emp√™che le clic de se propager imm√©diatement √† la fen√™tre/document, 
                // ce qui emp√™cherait la ligne de fermeture (point 2) d'ouvrir le menu.
                event.stopPropagation(); 
                
                // Bascule la classe 'show' sur le menu d√©roulant (pour l'afficher ou le masquer)
                dropdownMenu.classList.toggle('show');
            });

            // 2. FERMER LE MENU AU CLIC √Ä L'EXT√âRIEUR
            document.addEventListener('click', function(event) {
                // Si le clic n'est pas sur le menu d√©roulant ET n'est pas sur l'image elle-m√™me, on ferme le menu.
                if (!dropdownMenu.contains(event.target) && !profileImage.contains(event.target)) {
                    dropdownMenu.classList.remove('show');
                }
            });
        }
    });
</script>