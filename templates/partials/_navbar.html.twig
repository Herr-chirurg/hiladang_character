<script>
    document.addEventListener('DOMContentLoaded', function() {
        // üéØ CIBLEZ L'IMAGE DE PROFIL (le d√©clencheur)
        const profileImage = document.querySelector('.dropdown-trigger');
        
        // S√©lectionne le menu d√©roulant
        const dropdownMenu = document.querySelector('.dropdown-menu');

        // V√©rifie si les deux √©l√©ments n√©cessaires existent
        if (profileImage && dropdownMenu) {
            
            // 1. GESTION DE L'OUVERTURE/FERMETURE AU CLIC SUR L'IMAGE
            profileImage.addEventListener('click', function(event) {
                // Emp√™che le clic de se propager imm√©diatement √† la fen√™tre/document, 
                // ce qui emp√™cherait la ligne de fermeture (point 2) d'ouvrir le menu.
                event.stopPropagation(); 
                
                // Bascule la classe 'show' sur le menu d√©roulant (pour l'afficher ou le masquer)
                dropdownMenu.classList.toggle('show');
            });

            // 2. FERMER LE MENU AU CLIC √Ä L'EXT√âRIEUR
            document.addEventListener('click', function(event) {
                // Si le clic n'est pas sur le menu d√©roulant ET n'est pas sur l'image elle-m√™me, on ferme le menu.
                if (!dropdownMenu.contains(event.target) && !profileImage.contains(event.target)) {
                    dropdownMenu.classList.remove('show');
                }
            });
        }
    });
</script>