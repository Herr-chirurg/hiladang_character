{% extends 'base.html.twig' %}

{% block title %}Scenario{% endblock %}

{% block body %}
    <h1>Scenario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scenario.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ scenario.name }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ scenario.level }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ scenario.date ? scenario.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ scenario.description }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ scenario.img }}</td>
            </tr>
            <tr>
                <th>Post_link</th>
                <td>{{ scenario.postLink }}</td>
            </tr>
            <tr>
                <th>Summary_link</th>
                <td>{{ scenario.summaryLink }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ scenario.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_scenario_index') }}">back to list</a>

    <a href="{{ path('app_scenario_edit', {'id': scenario.id}) }}">edit</a>

    {{ include('scenario/_delete_form.html.twig') }}
{% endblock %}
