{% extends 'base.html.twig' %}

{% block title %}Scenario{% endblock %}

{% block body %}
    
    {% set current_route = app.request.attributes.get('_route') %}
    {{ render(controller('App\\Controller\\ActionController::index',{'route' : current_route, 'object' : scenario} )) }}

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ scenario.name }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ scenario.level }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ scenario.date ? scenario.date|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Lien du post</th>
                <td>{{ scenario.postLink }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ scenario.status }}</td>
                <td>
                    {% if scenario.status != "awarded" %}
                        <form action="{{ path("app_scenario_award", {'id': scenario.id}) }}" method="POST">
                                <button type="submit">Récompenser token</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Niveau</th>
                <th>Réussite</th>
                <th>Reputation</th>
                <th>Bonus Reputation</th>
            </tr>
        </thead>
        <tbody>
        {% set mjToken = scenario.tokens|filter(token => token.type == 'MJ')|first %}
        {% if mjToken %}
            <tr>
                    <td>{{ mjToken.ownerUser.username }}</td>
                    <td></td>
                    <td>{{ mjToken.usageRate != 0 ? mjToken.usageRate ~ "% / " : "" }}{{ mjToken.totalRate }}%</td>
                    <td>{{ mjToken.deltaPr }}%</td>
                    <td>{{ "%+d"|format(mjToken.deltaPrFromLevel) }}%</td>
            </tr>
        {% endif %}
        {% for token in scenario.tokens %}
            {% if token.type == "PJ" %}
                <tr>
                    <td>{{ token.character.name }}</td>
                    <td>{{ token.character.level }}</td>
                    <td>{{ token.usageRate != 0 ? token.usageRate ~ "% / " : "" }}{{ token.totalRate }}%</td>
                    <td>{{ token.deltaPr }}%</td>
                    <td>{{ "%+d"|format(token.deltaPrFromLevel) }}%</td>
                </tr>
            {% endif %}
                
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
