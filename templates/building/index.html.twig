{% extends 'base.html.twig' %}

{% block title %}Building index{% endblock %}

{% block body %}
    
    {% set current_route = app.request.attributes.get('_route') %}
    {{ render(controller('App\\Controller\\ActionController::index',{'route' : current_route} )) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Subtype</th>
                <th>Production</th>
                <th>Bonus</th>
                <th>Alias</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for building in buildings %}
            <tr>
                <td>{{ building.id }}</td>
                <td>{{ building.name }}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a href="{{ path('app_building_show', {'id': building.id}) }}">show</a>
                    <a href="{{ path('app_building_edit', {'id': building.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_building_new') }}">Create new</a>
{% endblock %}
