{% extends 'base.html.twig' %}

{% block title %}Transfer{% endblock %}

{% block body %}
    <h1>Transfer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transfer.id }}</td>
            </tr>
            <tr>
                <th>Emetteur</th>
                <td>{{ transfer.initiator.name }}</td>
            </tr>
            <tr>
                <th>Montant transmis Gp</th>
                <td>{{ transfer.gp|number_format(0, '.', ' ') }} GP</td>
            </tr>
            <tr>
                <th>Montant transmis Pr</th>
                <td>{{ transfer.pr|number_format(0, '.', ' ') }} PR </td>
            </tr>
            <tr>
                <th>Recepteur</th>
                <td>{{ transfer.recipient.name ?? "" }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transfer_index') }}">back to list</a>

    <a href="{{ path('app_transfer_edit', {'id': transfer.id}) }}">edit</a>

    {{ include('transfer/_delete_form.html.twig') }}
{% endblock %}





