            </tr>
        </thead>
        <tbody>
        {% for transfer in transfers %}
            <tr>
                <td>{{ transfer.initiator.name }}</td>
                <td>{{ transfer.gp|number_format(0, '.', ' ') }} GP</td>
                <td>{{ transfer.pr|number_format(0, '.', ' ') }} PR </td>
                <td>{{ transfer.recipient.name ?? "" }}</td>
                <td>{{ transfer.extraPr|number_format(0, '.', ' ') }} PR</td>
                <td>
