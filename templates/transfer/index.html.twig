{% extends 'base.html.twig' %}

{% block title %}Transfer index{% endblock %}

{% block body %}
    <h1>Transfer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gp</th>
                <th>Pr</th>
                <th>Extra_pr</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transfer in transfers %}
            <tr>
                <td>{{ transfer.id }}</td>
                <td>{{ transfer.gp }}</td>
                <td>{{ transfer.pr }}</td>
                <td>{{ transfer.extraPr }}</td>
                <td>
                    <a href="{{ path('app_transfer_show', {'id': transfer.id}) }}">show</a>
                    <a href="{{ path('app_transfer_edit', {'id': transfer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transfer_new') }}">Create new</a>
{% endblock %}
